<%= simple_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :bio %>
  <%= f.label :photo %>
  <%= f.file_field :photo %>
  <% if can?(:manage, User) %>
    <%= f.input :role, collection: User.roles %>
  <%end %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
