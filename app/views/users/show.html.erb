
<div class="d-flex bd-highlight">
  <div class="p-2 w-20 bd-highlight">
    <%= image_tag(@user.photo, style: 'width: 100%; height: 100%; preserveAspectRatio="xMidYMid slice"; focusable="false"; role="img"') if @user.photo.attached? %>
  </div>
  <div class="p-2 flex-shrink-1 bd-highlight align-self-center">
      <h1>First name: <small><%= @user.first_name%></small></h1>
      <h2>Last name: <small><%= @user.last_name%></small></h2>
      <h3>Bio: <small><%= @user.bio%></small></h3>

      <% if can? :update, @user %>
        <%= link_to "#{translate('items.edit')}", edit_user_path, class: "btn btn-sm btn-outline-secondary" %>
      <% end %>
  </div>
</div>


