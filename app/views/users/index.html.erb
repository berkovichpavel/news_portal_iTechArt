<ul class="mt-4 nav justify-content-center">
  <li class="nav-item">
    <%= link_to translate('persons.all_users'), users_path, class: 'nav-link active' %>
  </li>
  <li class="nav-item">
    <%= link_to translate('persons.admins'), users_path(role: 'admin'), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to translate('persons.correspondents'), users_path(role: 'correspondent'), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to translate('persons.redactors'), users_path(role: 'redactor'), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to translate('persons.users'), users_path(role: 'user'), class: 'nav-link' %>
  </li>
</ul>
<div class="container">
  <div class="row">
    <% @users.each do |user|  %>
      <div class="col-md-6 col-xl-4">
        <div class="card">
          <div class="card-body">
            <div class="media align-items-center">
              <%= image_tag(check_avatar(user), style: '', class: "avatar avatar-xl mr-3") %>
              <div class="media-body overflow-hidden">
                <h5 class="card-text mb-0"><%= user.first_name + ' ' + user.last_name %></h5>
                <p class="card-text text-muted"><%= user.role.upcase %></p>
                <p class="card-text">
                  <%= user.email %>
                </p>
              </div>
            </div>
            <%= link_to "", user_path(user), class: "tile-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
