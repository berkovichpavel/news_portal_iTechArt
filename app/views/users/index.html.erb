<h1 class="my-4">
  All users
</h1>
<ul class="list-group">
  <% @users.each_with_index do |user, index|  %>
      <li class="list-group-item list-group-item-primary">
        <%= user.email %>
        <%= link_to "#{translate('items.edit')}", edit_user_path(user), class: "btn btn-sm btn-outline-secondary justify-content-end" %>
      </li>
  <% end %>
</ul>




