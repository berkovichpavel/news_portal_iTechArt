<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="container-fluid">
  <% if params[:category] %>
    <h1 class="text-center mt-2 font-italic"><%= params[:category].capitalize %></h1>
  <% end %>

  <% unless @important_items.blank? %>
    <main role="main">
     <div class="album">
        <div class="container">
          <div class="row">
            <%= render partial: 'important_item', collection: @important_items%>
          </div>
        </div>
      </div>
    </main>
  <% end %>
  <% unless @other_items.blank? %>
    <hr/>
    <main role="main">
      <div class="album">
        <div class="container">
          <div class="row">
            <%= render partial: 'other_item', collection: @other_items%>
          </div>
        </div>
      </div>
    </main>
  <% end %>
  <ul class="pagination justify-content-center">
    <%= paginate @other_items, theme: 'twitter-bootstrap-4' %>
  </ul>
</div>



<!-- Script for raty gem -->
<script>
  $('.item-average-review-rating').raty({
      readOnly: true,
      numberMax: 5,
      path: '/assets/',
      score: function() {
          return $(this).attr('data-score')
      }
  });
</script>





