<%= javascript_include_tag Ckeditor.cdn_url %>

<%= simple_form_for @item do |f| %>
  <%= f.input :title, class: 'form-control' %>
  <%= f.input :full_text, as: :rich_text_area, label: 'Content', placeholder: 'Text goes here' %>
  <%= f.input :category, :collection => @categories, :class => 'form-group' %>
  <%= f.input :short_description %>
  <%= f.button :submit %>
<% end %>
