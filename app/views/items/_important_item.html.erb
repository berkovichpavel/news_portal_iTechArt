<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <% if important_item.main_img_href.attached? %>
      <%= image_tag(important_item.main_img_href, class: "my_important_item_image bd-placeholder-img card-img-top") %>
    <% elsif important_item.main_img %>
      <%= image_tag(important_item.main_img, class: "my_important_item_image bd-placeholder-img card-img-top") %>
    <% else %>
      <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Заполнитель: значок"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="42.5%" y="50%" fill="#eceeef" dy=".3em"><%= t "items.image" %></text></svg>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= important_item.title %></p>
      <div class="btn-group ">
        <%= link_to "#{translate('items.read_more')}", important_item, class: "btn btn-sm btn-outline-secondary" %>
        <% if can? :update, important_item %>
          <%= link_to "#{translate('items.edit')}", edit_item_path(important_item), class: "btn btn-sm btn-outline-secondary" %>
        <% end %>
        <% if can? :destroy, important_item %>
          <%= link_to "#{translate('items.destroy')}", important_item, method: :delete, class: "btn btn-sm btn-outline-secondary" %>
        <% end %>
      </div>
      <div>
        <% unless important_item.reviews.blank? %>
          <span class="item-average-review-rating" data-score=<%= important_item.reviews.average(:rating).round(2) %>></span>
        <% end %>
        <small class="text-muted"><%= important_item.created_at %></small>
        <small><i class="fa fa-eye"></i> <%= important_item.item_views.count %></small>
      </div>
    </div>
  </div>
</div>
