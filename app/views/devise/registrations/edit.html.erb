<div class="container light-style flex-grow-1 container-p-y">
  <h4 class="font-weight-bold py-3 mb-4">
    <%= t('persons.account_settings') %>
  </h4>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="card overflow-hidden">
      <div class="row no-gutters row-bordered row-border-light">
        <div class="col-md-3 pt-0">
          <div class="list-group list-group-flush account-settings-links">
            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-general"><%= t('persons.general') %></a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-change-password"><%= t('persons.change_password') %></a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-info"><%= t('persons.info') %></a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-social-links"><%= t('persons.social_links') %></a>
          </div>
        </div>
        <div class="col-md-9">
          <div class="tab-content">

              <div class="tab-pane fade active show" id="account-general">
                <div class="card-body media align-items-center">
                  <%= image_tag(check_avatar(@user), class: 'rounded-circle photo') %>
                  <div class="media-body ml-4">
                    <label class="btn btn-light">
                      <%= t('persons.upload_photo') %>
                      <%= f.input :photo, as: :file, input_html: {data: { direct_upload_url: rails_direct_uploads_url }}, label: false, class: 'account-settings-fileinput' %>
                    </label>
                    <div class="text-light small mt-1"><%= t('persons.allowed_photo') %></div>
                  </div>
                </div>
                <hr class="border-light m-0">
                <div class="card-body">
                  <div class="form-group">
                    <%= f.input :first_name, autofocus: true, class: 'form-control mb-1' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :last_name, autofocus: true, class: 'form-control mb-1' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :nickname, autofocus: true, class: 'form-control mb-1' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :email, autofocus: true, autocomplete: "email", class: 'form-control mb-1' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :hidden, autofocus: true, class: 'form-control mb-1' %>
                  </div>
                </div>
              </div>

              <div class="tab-pane fade" id="account-change-password">
                <div class="card-body pb-2">
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div><%= t 'devise.registrations.waiting confirmation' %> <%= resource.unconfirmed_email %></div>
                  <% end %>
                  <div class="form-group" >
                    <%= f.input :password, autocomplete: 'new-password', class: 'form-control' %>
                    <% if @minimum_password_length %>
                      <small><em><%= @minimum_password_length %> <%= t 'devise.registrations.characters_min' %></em></small>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.input :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
                  </div>
                </div>
              </div>

              <div class="tab-pane fade" id="account-info">
                <div class="card-body pb-2">
                  <div class="form-group">
                    <%= f.input :bio, autofocus: true, class: 'form-control', rows: 5 %>
                  </div>
                  <div class="form-group">
                  <%= f.input :DOB, as: :date, html5: true, autofocus: true, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :address, autofocus: true, class: 'form-control' %>
                  </div>
                </div>
              </div>

              <div class="tab-pane fade" id="account-social-links">
                <div class="card-body pb-2">
                  <div class="form-group">
                    <%= f.input :user_site, autofocus: true, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :instagram, autofocus: true, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.input :github, autofocus: true, class: 'form-control' %>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
    <%= f.input :current_password, autocomplete: 'current-password', class: 'form-control' %>
    <div class="text-right mt-3" style="margin-bottom: 40px">
      <%=  f.button :submit, translate('devise.registrations.update'), class: 'mt-3 btn btn-sm btn-outline-secondary btn-xs btn-block' %>
    </div>
  <% end %>
</div>
