<div class="container">
  <div class="row padded">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
      <div class="block1"></div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="block2">
        <div class="form-group">
          <h2><%=t 'devise.registrations.edit' %> <%= resource_name.to_s.humanize %></h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.input :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.input :last_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.input :first_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.label :photo %><br />
              <%= f.file_field :photo, class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.input :bio, autofocus: true, class: 'form-control' %>
            </div>
            <% if can?(:manage, User) %>
              <div class="field">
                <%= f.input :role, collection: User.roles, class: 'form-control' %>
              </div>
            <%end %>


            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div><%= t 'devise.registrations.waiting confirmation' %> <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.input :password, autocomplete: "new-password", class: 'form-control' %>
              <small><i>(leave blank if you don't want to change it)</i></small><br />
              <% if @minimum_password_length %>
                <small><em><%= @minimum_password_length %> <%= t 'devise.registrations.characters_min' %></em></small>
              <% end %>
            </div>

            <div class="field">
              <%= f.input :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.input :current_password, autocomplete: "current-password", class: 'form-control' %>
              <small><i><%= "(#{t 'devise.registrations.we_need_current_password'})" %></i></small><br />
            </div>

            <div class="actions">
              <%=  f.button :submit, translate('devise.registrations.update'), class: 'mt-3 btn btn-sm btn-outline-secondary btn-xs btn-block' %>
            </div>
          <% end %>
        </div>
        <h3><%= t 'devise.registrations.cancel_account' %></h3>

        <p>
          <%= t 'devise.registrations.unhappy' %>
          <%= button_to "#{t 'devise.registrations.cancel_account'}", registration_path(resource_name), data: { confirm: "#{t 'devise.registrations.are_you_sure'}" }, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
        </p>
        <%= button_to "#{t 'devise.registrations.back'}", :back, class: 'btn btn-sm btn-outline-secondary' %>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
      <div class="block3"></div>
    </div>
  </div>
</div>
