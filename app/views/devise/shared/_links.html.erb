<div class="mt-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to translate('devise.shared_links.log_in'), new_session_path(resource_name), class: 'btn btn-sm btn-light btn-xs btn-usr-show-2' %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to translate('devise.registrations.sign_up'), new_registration_path(resource_name), class: 'btn btn-sm btn-light btn-xs btn-usr-show-2' %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to translate('devise.shared_links.forgot_password'), new_password_path(resource_name), class: 'btn btn-sm btn-light btn-xs btn-usr-show-2' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to translate('devise.shared_links.did_not_recive_confirmation_instructions'), new_confirmation_path(resource_name), class: 'btn btn-sm btn-light btn-xs btn-usr-show-2' %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to translate('devise.shared_links.did_not_recive_unlock_instructions'), new_unlock_path(resource_name), class: 'btn btn-sm btn-light btn-xs btn-usr-show-2' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to translate('devise.shared_links.sign_in_with', parameter: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: 'btn btn-sm btn-light btn-xs btn-usr-show-2' %>
    <% end %>
  <% end %>
</div>

