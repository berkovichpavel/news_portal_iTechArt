<%= render "devise/shared/error_messages", resource: resource %>
<div class="log_in">
  <div class="cont">
    <div class="form sign-in">
      <h2 style="margin-top: 150px;"><%= t 'devise.passwords.forgot_password' %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <label>
          <span> <%= f.label :email %></span>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
        </label>
        <%= f.button translate('devise.passwords.reset_instructions'), class: 'submit' %>
      <% end %>
    </div>
    <div class="sub-cont">
      <div class="img">
        <div class="img__text m--up">
          <h2><%= t('devise.sessions.one_of_us') %></h2>
          <p><%= t('devise.sessions.we_have_missed_you') %></p>
        </div>
        <div class="img__btn">
          <%- if controller_name != 'sessions' %>
            <%= link_to t('devise.sessions.sign_in'), new_session_path(resource_name) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
